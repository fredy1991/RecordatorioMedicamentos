<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecordatorioMedicamentos.RegisterPage"
             Title="Registrar Usuario">
    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Registrar" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="NombresUsuario" Placeholder="Nombres Completos" />
        <Entry x:Name="CorreoUsuario" Placeholder="Correo" />
        <Entry x:Name="ContrasenaUsuario" Placeholder="Contraseña" IsPassword="True" />
        <Entry x:Name="ConfirmarContrasenaUsuario" Placeholder="Confirmar Contraseña" IsPassword="True" />
        <DatePicker x:Name="FechaNacimientoUsuario"  />

        <Button Text="Registrar" Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>